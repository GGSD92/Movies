@model Movies.ViewModels.GendersViewModel
@using Movies.Enums

<h1 class="text-center">Genders</h1>
<div class="row pb-1">
    <div class="col-10">
    </div>
    <div class="col-2">
        <input type="button" data-toggle="modal" data-target="myModal" onclick="onLoadAddModal('@Url.Action("GetAddView", "Genders")')" class="btn btn-sm btn-outline-primary float-md-right" value="New" />
    </div>
</div>

<div class="col-md-12 table-responsive">
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="2">Actions</th>
        </tr>
        @foreach (Gender gender in Model.Genders)
        {
            <tr>
                <td>@gender.Name</td>
                <td>@gender.Description</td>
                <td>
                    <input type="button" data-toggle="modal" data-target="myModal" onclick="getData('/Genders/GetEditView?id=@gender.Id', null, onLoadModificationModalSuccess)" class="btn btn-success" value="Edit" />
                    <input type="button" onclick="deleteRecordConfirmed('Genders', '@gender.Id')" class="btn btn-danger" value="Delete" />
                </td>
            </tr>
        }
    </table>

</div>