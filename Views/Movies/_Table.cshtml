@model Movies.ViewModels.MoviesViewModel
@using Movies.Enums

 <h1 class="text-center">Movies</h1>
 <div class="row pb-1">
     <div class="col-10">
     </div>
     <div class="col-2">
         <input type="button" data-toggle="modal" data-target="myModal" onclick="onLoadAddModal('@Url.Action("GetAddView", "Movies")')" class="btn btn-sm btn-outline-primary float-md-right" value="New" />
     </div>
 </div>

     <div class="col-md-12 table-responsive">

         <table class="table text-center table-sm justify-content-center">
             <tr>
                 <th>Title</th>
                 <th>Director</th>
                 <th>Duration</th>
                 <th>Clasification</th>
                 <th>Rating</th>
                 <th>Score</th>
                 <th colspan="2">Actions</th>
             </tr>
             <tbody>
                 @foreach (Movie movie in Model.Peliculas)
                 {
                     <tr>
                         <td>@movie.Title</td>
                         <td>@movie.Director</td>
                         <td>@movie.Duration</td>
                         <td>@movie.Clasification</td>
                         <td>@movie.Rating</td>
                         <td>@movie.Score</td>
                         <td>
                             <input type="button" data-toggle="modal" data-target="myModal" onclick="getData('/Movies/GetEditView?id=@movie.Id', null, onLoadModificationModalSuccess)" class="btn btn-success" value="Edit" />
                             <input type="button" onclick="deleteRecordConfirmed('Movies', '@movie.Id')" class="btn btn-danger" value="Delete" />
                         </td>
                     </tr>
                 }
             </tbody>
         </table>
     </div>



