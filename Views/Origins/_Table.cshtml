@model Movies.ViewModels.OriginsViewModel
@using Movies.Enums
@{
    ViewData["Title"] = "Tabla";
}
<div class="container pt-1">
    <div class="row pb-1">
        <div class="col-10">
            <h1>Origins</h1>
        </div>
        <div class="col-2">
            <input type="button" data-toggle="modal" data-target="myModal" onclick="onLoadAddModal('@Url.Action("GetAddView", "Origins")')" class="btn btn-sm btn-outline-primary float-right" value="New" />

        </div>
    </div>
</div>

<hr />
<div class="row">

    <table>
        <tr>
            <th>Name</th>
            <th colspan="2">Actions</th>
        </tr>
        @foreach (Origin origin in Model.Origenes)
        {
            <tr>
                <td>@origin.Name</td>
                <td>
                    <input type="button" data-toggle="modal" data-target="myModal" onclick="getData('/Origins/GetEditView?id=@origin.Id', null, onLoadModificationModalSuccess)" class="btn btn-success" value="Edit" />
                    <input type="button" onclick="deleteRecordConfirmed('Origins', '@origin.Id')" class="btn btn-danger" value="Delete" />
                </td>
            </tr>
        }
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modalbody">


        </div>
    </div>
</div>


